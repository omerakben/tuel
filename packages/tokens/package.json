    "type": "git",
    "url": "https://github.com/omerakben/tuel.git",
    "directory": "packages/tokens"
  },
  "homepage": "https://tuel.ai/docs/tokens",
  "bugs": {
    "url": "https://github.com/omerakben/tuel/issues"
