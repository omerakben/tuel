{
  "name": "tuel",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "turbo build",
    "build:demo": "turbo build && next build",
    "dev:packages": "turbo dev",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "turbo typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:security": "playwright test tests/e2e/security.spec.ts",
    "audit:security": "node scripts/security-audit.js",
    "audit:deps": "npm audit --audit-level=moderate",
    "audit:all": "pnpm audit:deps && pnpm audit:security",
    "docs:generate": "node scripts/generate-api-docs.js",
    "docs:serve": "npx serve docs",
    "docs:build": "pnpm docs:generate",
    "test:all": "pnpm test && pnpm test:e2e && pnpm audit:all",
    "clean": "turbo clean",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "turbo build && changeset publish"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.44.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "jsdom": "^24.0.0",
    "tailwindcss": "^4",
    "tsup": "^8.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5",
    "vitest": "^1.3.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@10.14.0",
  "description": "TUEL - Modern TypeScript animation library for React applications. High-performance components for scroll effects, galleries, interactions, and advanced animations.",
  "author": "Omer Akben <contact@tuel.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omerakben/tuel.git"
  },
  "homepage": "https://tuel.ai",
  "bugs": {
    "url": "https://github.com/omerakben/tuel/issues"
  },
  "keywords": [
    "react",
    "typescript",
    "animation",
    "scroll",
    "gallery",
    "ui",
    "components",
    "framer-motion",
    "gsap",
    "three.js",
    "monorepo"
  ]
}
